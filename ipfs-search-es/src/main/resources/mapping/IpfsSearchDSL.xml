<properties>
    <property name="ipfsSearch">
        <![CDATA[
          {
          "query" : {
            "bool": {
              "must": [
                 {
                   "term": {"deleteMark": 0}
                  }
                #if ($cid != $null && $cid != '')
                  ,{
                   "term": {"ipfs.keyword": "$cid" }
                  }
                #end
                #if ($mime != $null && $mime != '')
                  ,{
                   "term": {"mime.keyword": "$mime" }
                  }
                #end
                #if ($nodeId != $null && $nodeId != '')
                  ,{
                   "term": {"nodeId.keyword": "$nodeId" }
                  }
                #end
                #if ($query != $null && $query != '')
                  ,{
                    "multi_match": {
                      "query": "$query",
                      "fields": [ "name", "remarks","mime"]
                    }
                  }
                #end
              ]
              ,"filter": [
                    #if ($minTime != $null)
                    {
                     "range": {
                        "createTime": {
                          "gte": $minTime.getTime()
                        }
                      }
                    },
                    #end
                    #if ($maxTime != $null)
                    {
                     "range": {
                        "createTime": {
                          "lte": $maxTime.getTime()
                        }
                      }
                    },
                    #end
                    #if ($gtSize != $null)
                    {
                     "range": {
                        "size": {
                          "gte": $gtSize
                        }
                      }
                    },
                    #end
                    #if ($ltSize != $null)
                    {
                     "range": {
                        "size": {
                          "lte": $ltSize
                        }
                      }
                    },
                    #end
                    {
                       "term": {"deleteMark": 0}
                    }
               ]
            }
          },
          #set ($from = ($index - 1) * $size)
          "from":$from,
          "size":$size
          ,"sort":[
            #if ($sortList.size != $null)
                {
                    "size":#if(${sortList.size}) "asc" #else "desc" #end
                },
            #end
            #if ($sortList.createTime != $null)
                {
                    "createTime":#if(${sortList.createTime}) "asc" #else "desc" #end
                }
            #else
                {}
            #end
          ]
         }
        ]]>
    </property>
</properties>
